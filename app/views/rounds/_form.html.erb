<div class="container-fluid">
   <%= simple_form_for ([:course, @round]) do |f| %>
    <%= f.hidden_field :course_id, :value => params[:course_id] %>
    <%= f.input :score %>
    <%= f.input :date %>
    <%= button_tag(type: 'submit', class: "btn btn-primary btn-sm") do %> Post Your Round <% end %>
  <% end %>
</div>