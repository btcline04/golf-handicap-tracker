<div class="container-fluid">
  <h1>Your Club</h1>
  <br>
    <div id="club-info">
      <h2 class="club-name"><%= @club.name %></h2>
      <br>
      <h2 class="club-brand"><%= @club.brand %></h2>
    </div>
    <br>
    <div class="btn-toolbar">
      <button class="next-club btn btn-primary btn-sm" data-id="<%= @club.id %>">Next Club</button>
      <a href="/clubs"><button class="btn btn-primary btn-sm">See All Of Your Clubs</button></a>    
    </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $('.next-club').click(function() {
      var id = $(this).data("id");
      $('#club-info').html('')
      $.get('/clubs/' + id + '/next', function(data, status) {
        $('#club-info').append(`<h2>${data.name}</h2>` + 
          `<br>` + 
          `<h2>${data.brand}</h2>`);
        $('.next-club').data('id', data.id)
      })
    }) 
  });
</script>